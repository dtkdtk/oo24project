{
  "include": [
    "./Source/**/*.js",
    "./Source/**/*.d.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "noCheck": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": false,

    "strict": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "strictBuiltinIteratorReturn": true,
    "strictFunctionTypes": true,

    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext"]
  }
}